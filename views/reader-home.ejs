<!-- This is an EJS template for the reader's home page. 
It displays the list of published atricles with their titles, subtitles and the publication dates.  -->

<!doctype html>
<html lang="en">

<head>
  <%- include('./partials/metadata', { title: 'Read Article' }); %>
  <!-- Included Bootstrap CSS -->
  <link href="/assets/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light text-dark">
  <!-- Header included from partials folder -->
  <%- include('./partials/header', { goto: 'author' }); %>

  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% articles.forEach(function(article) { %>
        <div class="col mb-4">
          <a class="card border-<%= getColor(article.id) %> text-decoration-none" href="/reader/<%= article.id %>">
            <div class="card-header bg-transparent border-<%= getColor(article.id) %>">Article</div>
            <div class="card-body text-<%= getColor(article.id) %>">
              <h5 class="card-title">
                <%= article.title %>
              </h5>
              <p class="card-subtitle mb-2 text-muted">
                <%= article.subtitle %>
              </p>
            </div>
            <div class="card-footer bg-transparent text-muted">
              <span class="fw-light">
                <%= new Date(article.published).toLocaleString() %>
              </span>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  </div>

</body>

</html>
